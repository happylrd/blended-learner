<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/et_act_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="活动名" />

    <EditText
        android:id="@+id/et_act_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="分数" />

    <EditText
        android:id="@+id/et_act_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textarea_bg"
        android:hint="活动描述"
        android:maxLines="8"
        android:minLines="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_act_has_passed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核通过"
            android:textColor="@color/colorAccent" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_act_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="开始时间"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_act_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="结束时间"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/colorPrimary"
        android:text="提交"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
</LinearLayout>
